<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Interactive_quiz_by_harneet.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">



    <StackLayout>
        <Label
            Margin="10"
            FontSize="Large"
            Text="Quiz Title" />
        <Label x:Name="Question"  Margin="10" Text="Question Text" />
        <StackLayout Margin="10" Orientation="Horizontal">
            <Button x:Name="BTN1"  Margin="5" Text="Option A" />
            <Button x:Name="BTN2 " Margin="5" Text="Option B" />
            <Button  x:Name="BTN3 " Margin="5" Text="Option C" />
            <Button  x:Name="BTN4 " Margin="5" Text="Option D" />
        </StackLayout>
        <StackLayout Margin="10" Orientation="Horizontal">
            <Button Margin="5" Text="Quit" />
            <Button Margin="5" Text="Next" />
        </StackLayout>
    </StackLayout>













</ContentPage>